{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<div class="container my-5">
    <h1>Connexion</h1>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email:</label>
        <input class="form-control my-2" type="text" id="username" name="_username" value="{{ last_username }}" required>

        <label for="password">Password:</label>
        <input class="form-control my-2" type="password" id="password" name="_password" required>

        <input type="hidden" name="_target_path" value"{{ path('app_account')}}"> 

        <button class="btn btn-success my-2" type="submit">Valider</button>
    </form>
</div>

{% endblock %}
